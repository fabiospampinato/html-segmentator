{
  "name": "html-segmentator",
  "description": "A small library for splitting an HTML string into its top-level sections. Based on htmlparser2.",
  "version": "1.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "tsc --skipLibCheck",
    "compile:watch": "tsc --skipLibCheck --watch",
    "test": "fava",
    "test:watch": "fava -w",
    "prepublishOnly": "npm run clean && npm run compile && npm run test"
  },
  "bugs": {
    "url": "https://github.com/fabiospampinato/html-segmentator/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Fabio Spampinato",
    "email": "spampinabio@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiospampinato/html-segmentator.git"
  },
  "keywords": [
    "html",
    "segment",
    "segments",
    "segmentator",
    "split",
    "top-level"
  ],
  "dependencies": {
    "domhandler": "^4.2.2"
  },
  "devDependencies": {
    "fava": "^0.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  }
}
